# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/startup_health_check

# Security Configuration
EMAIL_ENCRYPTION_KEY=change-this-to-a-strong-random-key
TURNSTILE_SECRET_KEY=your-cloudflare-turnstile-secret-key
RECAPTCHA_SECRET_KEY=your-google-recaptcha-secret-key
DISABLE_CAPTCHA=false

# Authentication (Okta SSO)
OKTA_DOMAIN=your-domain.okta.com
OKTA_AUDIENCE=api://default
OKTA_ISSUER=https://your-domain.okta.com/oauth2/default
DISABLE_AUTH=false

# Email Notification (AWS SES)
NOTIFICATION_EMAIL=service@offrd.co
SENDER_EMAIL=noreply@offrd.co
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1

# SMTP Configuration (alternative to AWS SES)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASSWORD=your-smtp-password
SMTP_FROM_EMAIL=noreply@example.com

# Development Settings (set to true for local development)
# DISABLE_CAPTCHA=true
# DISABLE_AUTH=true
